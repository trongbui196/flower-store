<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <script src="https://kit.fontawesome.com/664e282a54.js" crossorigin="anonymous"></script>
    <script src="~/js/scripts.js"></script>
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/css/siteadmin.css" asp-append-version="true" />

</head>
<body class="sidebar-menu-collapsed">

    <!-- sidebar menu start -->
    <div class="sidebar-menu sticky-sidebar-menu">

        <!-- logo start -->
        <div class="logo">
            <h1><a asp-controller="Admin" asp-action="Dashboard">Collective</a></h1>
        </div>

        <!-- if logo is image enable this -->
        <!-- image logo --
          <div class="logo">
        <a asp-controller="Admin" asp-action="Dashboard">
              <img src="image-path" alt="Your logo" title="Your logo" class="img-fluid" style="height:35px;" />
            </a>
          </div>
          <!-- //image logo -->

        <div class="logo-icon text-center">
            <a asp-controller="Admin" asp-action="Dashboard" l" title="logo"><i class="fa-solid fa-hippo"></i> </a>
        </div>
        <!-- //logo end -->

        <div class="sidebar-menu-inner">

            <!-- sidebar nav start -->
            <ul class="nav nav-pills nav-stacked custom-nav">
                <li>

                    <a asp-controller="Admin" asp-action="Dashboard"><i class="fa fa-tachometer"></i><span> Dashboard</span></a>

                </li>
                <li><a asp-controller="Admin" asp-action="adminflower"><i class="fa-solid fa-fan"></i> <span>Flower Panel</span></a></li>
                <li><a asp-controller="Admin" asp-action="adminorder"><i class="fa-solid fa-box"></i> <span>Order Panel</span></a></li>
                <li><a asp-controller="Admin" asp-action="admincustomer"><i class="fa-solid fa-user-tie"></i> <span>Customer Panel</span></a></li>
            </ul>
            <!-- //sidebar nav end -->
            <!-- toggle button start -->
            <a class="toggle-btn">
                <i class="fa fa-angle-double-left menu-collapsed__left"><span>Collapse Sidebar</span></i>
                <i class="fa fa-angle-double-right menu-collapsed__right"></i>
            </a>
            <!-- //toggle button end -->
        </div>
    </div>
    <!-- //sidebar menu end -->
    <!-- header-starts -->
    <div class="header sticky-header">

        <!-- notification menu start -->
        <div class="menu-right">
            <div class="navbar user-panel-top">
                <img src="~/img/h2-logo-1 (1).png" />

            </div>
        </div>
        <!--notification menu end -->
    </div>
    @RenderBody()
</body>
</html>