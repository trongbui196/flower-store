@model WebApplication3.Models.Flower

@{
    ViewData["Title"] = "Editflower";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div style="margin-left:150px;margin-top:100px">
<h1>Editflower</h1>

<h4>Flower</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Editflower">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="FlowerId" />
            <div class="form-group">
                <label asp-for="KindId" class="control-label"></label>
                <select asp-for="KindId" class="form-control" asp-items="ViewBag.KindId"></select>
                <span asp-validation-for="KindId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Fname" class="control-label"></label>
                <input asp-for="Fname" class="form-control" />
                <span asp-validation-for="Fname" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Fprice" class="control-label"></label>
                <input asp-for="Fprice" class="form-control" />
                <span asp-validation-for="Fprice" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Fdescribe" class="control-label"></label>
                <input asp-for="Fdescribe" class="form-control" />
                <span asp-validation-for="Fdescribe" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Fimg" class="control-label"></label>
                <input asp-for="Fimg" class="form-control" />
                <span asp-validation-for="Fimg" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Fstock" class="control-label"></label>
                <input asp-for="Fstock" class="form-control" />
                <span asp-validation-for="Fstock" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>
</div>