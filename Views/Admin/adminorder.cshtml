@using X.PagedList.Mvc.Core;
@{
    ViewData["Title"] = "Quản trị đơn hàng";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
<div style="margin-top:100px;margin-left:100px">
    <p>
        <a asp-action="addorder">Create New</a>
    </p>

    <div style="display:grid;
grid-template-columns:1fr 1fr 1fr 3fr  1fr 1fr 1fr 1fr;" class="grit-cver">
        @model X.PagedList.IPagedList<Orderr>
        <p>Mã đơn</p>
        <p>Ngày tạo</p>
        <p>Mã khách hàng</p>
        <p>Địa chỉ giao</p>
        <p>Tên người nhận</p>
        <p>Số điện thoại</p>
        <p>Tổng hóa đơn</p>
        <p>Thao tác</p>
        @foreach (var item in Model)
        {
            <p> @Html.DisplayFor(modelItem => item.OrderId)</p>
            <p> @Html.DisplayFor(modelItem => item.OrderDate)</p>
            <p> @Html.DisplayFor(modelItem => item.CustomerId)</p>
            <p> @Html.DisplayFor(modelItem => item.DeliAddress)</p>
            <p> @Html.DisplayFor(modelItem => item.ReceiverName)</p>
            <p> @Html.DisplayFor(modelItem => item.ReceiverPhone)</p>
            <p>@Html.DisplayFor(modelItem => item.Totalbill)</p>
            <p>

                <a asp-action="Editorder" asp-route-id="@item.OrderId">Edit</a> |
                
                <a asp-action="Deleteorder" asp-route-id="@item.OrderId">Delete</a>

            </p>
        }
    </div>

    <div style="display:block" class="page-nav">
        @Html.PagedListPager(Model, page => Url.Action("adminorder", new { page = page }))
    </div>

</div>


